<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3091d6"
    android:orientation="vertical"
    >

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:minHeight="50dp" >

        <EditText
            android:id="@+id/bapp_modul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_textfield"
            android:ems="10"
            android:gravity="center"
            android:hint="Modul" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="2dp"
        android:gravity="center" >

        <EditText
            android:id="@+id/bapp_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_textfield"
            android:ems="10"
            android:gravity="center"
            android:hint="Date" >

            <requestFocus />
        </EditText>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <EditText
                android:id="@+id/bapp_jammulai"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/back_textfield"
                android:gravity="center"
                android:hint="Start Time"
                android:inputType="time" />

            <EditText
                android:id="@+id/bapp_jamselesai"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@drawable/back_textfield"
                android:gravity="center"
                android:hint="End time"
                android:inputType="time" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/TableRow01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <EditText
                android:id="@+id/bapp_lectureCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/back_textfield"
                android:ems="10"
                android:gravity="center"
                android:hint="Lecture Code" />

            <EditText
                android:id="@+id/bapp_pj"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/back_textfield"
                android:ems="10"
                android:gravity="center"
                android:hint="Asisten" />
        </LinearLayout>
    </TableRow>

    <ListView
        android:id="@+id/list_bapp_mahasiswa"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff" >
    </ListView>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center" >

        <EditText
            android:id="@+id/bapp_caption"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_textfield"
            android:ems="10"
            android:gravity="center"
            android:hint="Caption"
            android:inputType="textMultiLine" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="3dp"
        android:gravity="center" >

        <Button
            android:id="@+id/bapp_btnCreate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_back200"
            android:text="Create Bapp"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/bapp_BtnViewww"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_back200"
            android:text="View Bapp"
            android:textColor="#ffffff" />

    </TableRow>

    <TableRow
        android:id="@+id/TableRow02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="5dp"
        android:gravity="center" >
    </TableRow>
</LinearLayout>
