<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3091d6"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <EditText
            android:id="@+id/reminder_title"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/back_textfield"
            android:ems="10"
            android:gravity="center"
            android:hint="Title"
            android:textAlignment="center" >

            <requestFocus />
        </EditText>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <EditText
            android:id="@+id/reminder_tanggal_mulai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_textfield"
            android:ems="10"
            android:gravity="center"
            android:hint="Start Date"
            android:inputType="date" />

        <EditText
            android:id="@+id/reminder_tanggal_akhir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_textfield"
            android:ems="10"
            android:gravity="center"
            android:hint="End Date"
            android:inputType="date" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <EditText
                android:id="@+id/reminder_jammulai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/back_textfield"
                android:editable="true"
                android:ems="10"
                android:gravity="center"
                android:hint="Start Time"
                android:inputType="datetime" />

            <EditText
                android:id="@+id/reminder_jamselesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/back_textfield"
                android:ems="10"
                android:gravity="center"
                android:hint="End Time"
                android:inputType="datetime" />

        </LinearLayout>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <EditText
            android:id="@+id/reminder_caption"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/back_textfield"
            android:ems="10"
            android:gravity="center"
            android:hint="Caption"
            android:inputType="textMultiLine" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <Button
            android:id="@+id/reminder_BtnCreate"
            android:layout_width="265dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_back200"
            android:src="@drawable/cr_reminder2"
            android:text="Create Reminder"
            android:textColor="#ffffff" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/reminder_BtnView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/view_remind2"
            android:src="@drawable/view_remind2" />

    </TableRow>

    <TableRow
        android:id="@+id/TableRow01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="#074083"
        android:gravity="center" >

        <TextView
            android:id="@+id/tes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NURUL AKBAR"
            android:textColor="#ffffff" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#074083"
        android:gravity="center" >

        <TextView
            android:id="@+id/profil_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015"
            android:textColor="#ffffff" />
    </TableRow>

</LinearLayout>
