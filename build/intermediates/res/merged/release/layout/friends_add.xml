<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:textAlignment="center" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#dcdcdc"
        android:gravity="center"
        android:padding="10dp" >

        <TextView
            android:id="@+id/pesan_hapus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Friend +"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#dcdcdc"
        android:gravity="center"
        android:padding="10dp" >

        <EditText
            android:id="@+id/friends_addUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/back_textfield"
            android:ems="10"
            android:gravity="center"
            android:hint="Username"
            android:inputType="textPersonName"
            android:textAlignment="center" >

            <requestFocus />
        </EditText>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#dcdcdc"
        android:gravity="center"
        android:padding="10dp" >

        <EditText
            android:id="@+id/friends_addNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_textfield"
            android:ems="10"
            android:gravity="center"
            android:hint="Nickname"
            android:inputType="textPersonName"
            android:textAlignment="center" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#dcdcdc"
        android:gravity="center"
        android:padding="10dp" >

        <Button
            android:id="@+id/friends_btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_back200"
            android:text="Add+" />

    </TableRow>

</LinearLayout>
